@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
 
<div class="container mx-auto p-8 bg-white shadow-lg rounded-lg">
    <h1 class="text-3xl font-extrabold mb-8 text-gray-800">Manage Issues</h1>

    <!-- Search Form -->
    <div class="mb-6">
        <label for="search-id" class="block text-gray-700 text-lg font-medium">Search Issue by ID:</label>
        <input type="number" id="search-id" name="search-id" data-bind="value: searchId" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
        <button type="button" data-bind="click: searchIssueById" class="mt-2 px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-300">Search</button>
    </div>

    <!-- Form for Adding an Issue -->
    <form id="issue-form" class="space-y-6">
        <div>
            <label for="title" class="block text-gray-700 text-lg font-medium">Title:</label>
            <input type="text" id="title" name="title" data-bind="value: newIssueTitle" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
        </div>
        <div>
            <label for="description" class="block text-gray-700 text-lg font-medium">Description:</label>
            <textarea id="description" name="description" data-bind="value: newIssueDescription" rows="4" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required></textarea>
        </div>
        <button type="submit" data-bind="click: addIssue" class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-300">Add Issue</button>
        <button type="button" data-bind="click: updateIssue" class="px-6 py-3 bg-green-600 text-white rounded-md hover:bg-green-700 transition duration-300" data-bind="visible: selectedIssue">Update Issue</button>
    </form>

    <!-- Issue List -->
    <div id="issue-list" class="mt-8 space-y-6">
        <!-- Issues will be populated here via Knockout.js -->
        <div data-bind="foreach: issues">
            <div class="p-6 bg-white border border-gray-200 rounded-lg shadow-lg">
                <h2 class="text-2xl font-semibold text-gray-800" data-bind="text: title"></h2>
                <p class="text-gray-600 mt-2" data-bind="text: description"></p>
                <button data-bind="click: $parent.deleteIssue" class="mt-4 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition duration-300">Delete</button>
            </div>
        </div>
    </div>
</div>